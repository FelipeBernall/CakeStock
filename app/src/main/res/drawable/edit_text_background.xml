<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Define o estado do foco -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Cor de fundo quando focado -->
            <corners android:radius="8dp"/>  <!-- Cantos arredondados -->
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Borda -->
        </shape>
    </item>
    <!-- Estado padrão -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Cor de fundo padrão -->
            <corners android:radius="8dp"/>  <!-- Cantos arredondados -->
            <stroke android:width="1dp" android:color="#B0B0B0"/> <!-- Borda -->
        </shape>
    </item>
</selector>
