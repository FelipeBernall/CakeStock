        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnCadastroProduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Produtos"
        android:backgroundTint="@color/DeepSkyBlue"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnListaProdutos"
        android:layout_width="match_parent"
        android:backgroundTint="@color/DeepSkyBlue"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Lista de Produtos" />

    <Button
        android:backgroundTint="@color/DeepSkyBlue"
        android:textColor="@android:color/white"
        android:id="@+id/btnCadastroCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastrar Clientes" />

    <Button
        android:backgroundTint="@color/DeepSkyBlue"
        android:textColor="@android:color/white"
        android:id="@+id/btnListaClientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Clientes" />

    <Button
        android:id="@+id/btnControleFinanceiro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Controle Financeiro"
        android:backgroundTint="@color/DeepSkyBlue"
        android:textColor="@android:color/white" />


