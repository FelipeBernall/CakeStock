<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.RegistroVenda">

    <!-- Layout para o botão de voltar e o título -->
    <LinearLayout
        android:id="@+id/layout_voltar_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botão de voltar -->
        <ImageButton
            android:id="@+id/btn_voltar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_before"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Voltar"
            android:padding="16dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/txt_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/novo_registro_venda"
            android:textColor="#2F8E85"
            android:textSize="25sp"
            android:textStyle="bold"
            android:gravity="center_vertical" />

    </LinearLayout>

    <!-- ScrollView para rolar o conteúdo -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_voltar_titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Campo para descrição -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_descricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/descricao"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_descricao"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/descricao_hint"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Campo para data -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/data"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="@string/data_hint"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Campo para selecionar o cliente -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_cliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cliente"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_cliente"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:focusable="false"
                    android:hint="@string/selecionar"
                    android:minHeight="48dp"
                    android:clickable="true" />
            </LinearLayout>



            <!-- Campo para selecionar o produto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_produto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/produto"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_produto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:drawableEnd="@drawable/ic_arrow_down"
                    android:focusable="false"
                    android:hint="@string/adicionar"
                    android:minHeight="48dp"
                    android:clickable="true" />
            </LinearLayout>

            <!-- Lista de produtos adicionados -->
            <ListView
                android:id="@+id/lv_produtos_adicionados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:dividerHeight="1dp"
                android:visibility="visible"/>

            <!-- Campo para valor total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tv_valor_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/valor_total"
                    android:textStyle="bold"
                    android:gravity="center_vertical" />

                <EditText
                    android:id="@+id/et_valor_total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="@string/valor_total_hint"
                    android:inputType="numberDecimal"
                    android:minHeight="48dp"
                    android:focusable="false" /> <!-- Campo não editável -->
            </LinearLayout>

            <EditText
                android:id="@+id/et_desconto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Desconto"
                android:inputType="numberDecimal"/>


            <!-- Botão para salvar -->
            <Button
                android:id="@+id/btn_salvar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#2F8E85"
                android:text="@string/btn_salvar" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
