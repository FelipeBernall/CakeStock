<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".view.Transacoes">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Navegação entre meses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingVertical="8dp">

            <!-- Botão de mês anterior -->
            <ImageButton
                android:id="@+id/btn_previous_month"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_before"
                app:tint="@android:color/black"
                android:contentDescription="Previous Month"
                android:padding="8dp" />

            <!-- Texto do mês atual -->
            <TextView
                android:id="@+id/tv_current_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Mês"
                android:textAlignment="center"
                android:textSize="18sp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@android:color/black" />

            <!-- Botão de próximo mês -->
            <ImageButton
                android:id="@+id/btn_next_month"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_next"
                app:tint="@android:color/black"
                android:contentDescription="Next Month"
                android:padding="8dp" />
        </LinearLayout>

        <!-- Resumo dos saldos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Saldo -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_saldo_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Saldo"
                    android:textStyle="bold"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tv_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="R$ 0,00"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>

            <!-- Gastos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_despesas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Despesas"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_gastos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="R$ 0,00"
                    android:textColor="@android:color/holo_red_dark" />
            </LinearLayout>

            <!-- Ganhos -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_vendas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendas"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_ganhos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="R$ 0,00"
                    android:textColor="@android:color/holo_green_dark" />
            </LinearLayout>
        </LinearLayout>

        <!-- Lista de transações -->
        <!-- Botões inferiores -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:paddingVertical="16dp" />

        <LinearLayout
            android:id="@+id/ll_botoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Botão de gasto -->

            <!-- Botão de ganho -->
            <ImageButton
                android:id="@+id/btn_despesas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Expense"
                android:padding="16dp"
                android:src="@drawable/ic_gasto" />

            <ImageButton
                android:id="@+id/btn_vendas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_ganho"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Income"
                android:padding="16dp" />

            <!-- Botão de filtro -->
            <ImageButton
                android:id="@+id/btn_filtro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_filter"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Filter"
                android:padding="16dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
